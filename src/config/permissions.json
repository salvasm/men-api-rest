[
  {
    "group": "admin",
    "permissions": [
      {
        "resource": "*",
        "methods": "*",
        "action": "allow"
      }
    ]
  },
  {
    "group": "user",
    "permissions": [
      {
        "resource": "user/*",
        "methods": ["GET"],
        "action": "allow"
      },
      {
        "resource": "auth/logout",
        "methods": ["POST"],
        "action": "allow"
      }
    ]
  },
  {
    "group": "guest",
    "permissions": [
      {
        "resource": "user/*",
        "methods": ["GET"],
        "action": "allow"
      },
      {
        "resource": "auth/logout",
        "methods": ["POST"],
        "action": "allow"
      }
    ]
  }
]
